<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:text="Ultimate Template App"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#7c5406" android:textSize="25sp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="â€¢ Hope you like the app. We'd like to hear your suggestions :)  "
                android:textColor="#7c5406" android:textSize="16sp"/>

            <Button
                android:id="@+id/button_info_feedback"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:text="contact us"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/button_info_back_to_main"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:text="back to main"
                android:textColor="#FFF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>